{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: gcc.exe build riscv active file",
			"command": "gcc",
			"args": [
				"-g",
				"${workspaceFolder}/*.c",
				"${workspaceFolder}/simhw/*.c",
				"-o",
				"${workspaceFolder}/bin/myProgram.elf"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: \"/usr/bin/gcc\""
		}
	]
}